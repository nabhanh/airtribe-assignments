{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["es2022", "esnext.asynciterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": ".build",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022"
  },
  "exclude": ["node_modules", "**/node_modules/*", "node_modules/*", "bin/*"]
}
